<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/space_20">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="提示"
        android:textColor="@color/app_main_txt_color"
        android:textSize="@dimen/space_16"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/space_8"/>

    <TextView
        android:id="@+id/dialog_msg_28"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/app_main_txt_color"
        android:textSize="@dimen/space_14"
        android:lineSpacingExtra="@dimen/space_4"/>

    <TextView
        android:id="@+id/dialog_msg_32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/app_main_txt_color"
        android:textSize="@dimen/space_16" />

    <RelativeLayout
        android:id="@+id/dialog_input_r"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/dialog_input"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:background="@drawable/input_bg"
            android:ellipsize="end"
            android:gravity="center|left"
            android:inputType="textPassword"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/dialog_input_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/space_5"
            android:src="@drawable/login_bt_delete_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/dialog_progress"
        style="@style/setting_clean_cache_progressbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/dialog_percent_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:paddingRight="15dp"
        android:layout_marginTop="@dimen/space_8"
        android:text="0%"
        android:textColor="@color/app_black_txt"
        android:visibility="gone" />


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="#E7E7E7" />

    <LinearLayout
        android:id="@+id/dialog_two_btn_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="取消"
            android:textColor="@drawable/app_main_color_click_selector"
            android:textSize="16dp" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#E7E7E7" />

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@null"
            android:text="确定"
            android:textColor="@drawable/app_main_color_click_selector"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/dialog_singelok"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@null"
        android:text="确定"
        android:textColor="@drawable/app_main_color_click_selector"
        android:textSize="16dp" />
</LinearLayout>